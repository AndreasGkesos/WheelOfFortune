<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>@ViewBag.Title - Spin2Win</title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <!--     Fonts and icons     -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet"/> 
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" />

    @Styles.Render("~/Content/stable/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body class="index-page sidebar-collapse">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            @Html.ActionLink("Wheel Of Fortune", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <span style="font-size:30px;cursor:pointer" onclick="openNav()">&#9776; Menu</span>
            <div id="mySidenav" class="sidenav">
                <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
                @Html.Partial("_LoginPartial")
            </div>
        </div>

    </nav>

    <!-- End Navbar -->
    
    <div id="main" class="page-header" filter-color="black">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/stable")
    @RenderSection("scripts", required: false)
</body>
</html>
