@model WheelOfFortune.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="page-header-image"></div>
<div class="container">
    <div class="col-md-4 content-center">
        <div class="card card-login card-plain">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form", role = "form", enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="header header-primary text-center">
                    <div class="logo-container">
                        <img src="../Content/img/now-logo.png" alt="">
                    </div>
                </div>
                    <div class="content">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="input-group form-group-no-border input-lg">
                            @Html.LabelFor(m => m.Username, new { @class = "form-control" })
                            @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                            </div>
                            @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                        <div class="input-group form-group-no-border input-lg">
                            @Html.LabelFor(m => m.Email, new { @class = "form-control" })
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            </div>
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        <div class="input-group form-group-no-border input-lg">
                            @Html.LabelFor(m => m.Password, new { @class = "form-control" })
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            </div>
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        <div class="input-group form-group-no-border input-lg">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-control" })
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                            </div>
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                        <div class="input-group form-group-no-border input-lg">
                            @Html.LabelFor(m => m.UserPhoto, new { @class = "" })
                            <input name="UserPhoto" type="file" accept=".BMP,.JPG,.GIF,.PNG,.TIFF" /> 
                        </div>
                            @Html.ValidationMessageFor(m => m.UserPhoto, "", new { @class = "text-danger" })

                    </div>
                    <div class="footer text-center">
                        <input type="submit" class="btn btn-primary btn-round btn-lg btn-block" value="Register" />
                    </div>
                    <div class="pull-left">
                        <h6>
                            @Html.ActionLink("Log in", "Login", new { area = "" }, new { @class = "link" })
                        </h6>
                    </div>
                    <div class="pull-right">
                        <h6>
                            <a href="#" class="link">Need Help?</a>
                        </h6>
                    </div>
                    @* Enable this once you have account confirmation enabled for password reset functionality
                        <p>
                            @Html.ActionLink("Forgot your password?", "ForgotPassword")
                        </p>*@
            }
        </div>
    </div>
</div>
