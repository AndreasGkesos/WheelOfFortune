@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";

}


<div class="user" style="z-index:99999999!important;background-color:white!important;color:black;">
    <table id="spins" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>User Id</th>
                <th>User Name</th>
                <th>Delete</th>
                
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@section scripts {

    @Scripts.Render("~/bundles/SpinsHistoryView")
    <script type="text/javascript">
        $(function () {



            $(document).ready(function () {
                const table = $("#user").DataTable
                (
                    {

                        ajax:
                        {
                            url: "/api/User/GetAll",
                            dataSrc: ""
                        },
                        columns:
                        [
                            {
                                data: "Id"
                            },
                            {
                                data: "UserName"
                            },
                            {
                                data: "Id",
                                render: function (data) {
                                    return "<button class='btn-link js-delete' data-customer-id=" + data + ">Delete</button>";
                            }
                           
                        ]

                    });
            });

        });

        $("#user").on("click", ".js-delete", function () {
            var button = $(this);

            bootbox.confirm("Are you sure you want to delete this user?", function (result) {
                if (result) {
                    $.ajax({
                        url: "/api/user/GetAll" + button.attr("data-movie-id"),
                        method: "DELETE",
                        success: function () {
                            table.row(button.parents("tr")).remove().draw();
                        }
                    });
                }
            });
        });
    </script>
}


